#!/usr/bin/env bash

termpath="/home/oxhart/terminalConfigs/.dotfiles"


if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find $termpath/nvim/.config $termpath/scripts/scripts ~/dev/learn ~/dev/c -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
session=$(tmux ls | awk -v typed="$selected_name" '$1 ~ ("^" typed) {gsub(":",""); print $1 }' | head -1)

if [[ -z $TMUX ]]; then
  if [ -n "$session" ]; then
    printf "session is: $session"
    tmux attach -t $selected_name
    exit 0
  else
    printf "session is: $session\n\n"
    tmux new-session -s $selected_name -c $selected
    exit 0
  fi
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

if [[ -n $TMUX ]]; then
  tmux switch-client -t $selected_name
  exit 0
fi
